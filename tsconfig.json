{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"]
    },
    "moduleResolution": "Node", 
    "jsx": "react-jsx", 
    "outDir": "./dist", 
    "target": "ESNext", 
    "module": "ESNext" 
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules"] 
}
